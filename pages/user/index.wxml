<!--pages/mine/mine.wxml-->
<!-- 头部 -->
<view class='mine_info'>
  <image class='mine_banner' src='../../images/earth.png'></image>
  <view class='mine_info_head'>
    <view class='mine_head_left' bindtap='info'>
      <view class='mine_head_leftPic'>0</view>
      <view class='mine_head_leftDes'>已沟通</view>
    </view>
    <view class='jiange'></view>
    <view class='mine_head_center'>
      <view class='headBorder'><open-data type="userAvatarUrl" class="Head"></open-data> </view>
      <view class='dian'></view>
      <view class='nameBox'><open-data type="userNickName" lang="zh_CN" class="name"></open-data> </view>
      <view class='lv'>个人用户</view>
    </view>
    <view class='jiange'></view>
    <view class='mine_head_right' bindtap='addr'>
      <view class='mine_head_rightPic'>0</view>
      <view class='mine_head_rightDes'>已投递</view>
    </view>
  </view>
</view>
<!-- 内容 -->
<view class='list_content'>
  <view class='list' bindtap='restMoney'>
    <view class='list_left'>
      <image class='listIcon' src='../../images/info.png'></image>
      <view class='listName'>在线简历</view>
    </view>
    <image src='../../images/jiantou.png' class='jiantou'></image>
  </view>
  <view class='list' bindtap='realName'>
    <view class='list_left'>
      <image class='listIcon' src='../../images/resume.png'></image>
      <view class='listName'>上传附件</view>
    </view>
    <view class='list_right'>
      <view class='check'>添加</view>
      <image src='../../images/jiantou.png' class='jiantou'></image>
    </view>  
  </view>
  <view class='list' bindtap='view'>
    <view class='list_left'>
      <image class='listIcon' src='../../images/feedback.png'></image>
      <view class='listName'>意见反馈</view>
    </view>
    <image src='../../images/jiantou.png' class='jiantou'></image>
  </view>
  <view class='list'>
    <view class='list_left'>
      <image class='listIcon' src='../../images/aboutme.png'></image>
      <view class='listName'>关于我们</view>
    </view>
    <image src='../../images/jiantou.png' class='jiantou'></image>
  </view>
  <button class='signOut' bindtap='signOut'>退出登录</button>
</view>
<!-- 热线 -->
<import src="../template/template.wxml"/>
<template is="rexian"/>