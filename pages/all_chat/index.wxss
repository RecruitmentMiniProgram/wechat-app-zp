/* pages/award/award.wxss */
.message{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

.login{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

.unLogin{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

.img{
  vertical-align: middle;
}
.btn{
  margin: auto;
  padding: 0;
  width: 70%;
  font-size: 13px; 
  border-radius: 0;
  background-color:#4a90e2;
  color:#ffff;
}

.nomsg{
  font-size: 13px; 
}
.btn-hover {
  background-color: #007acc; /* 触摸时的背景色，可以根据需要调整 */
}
.info {
  display: flex;
  justify-content: space-between;
}

.left {
  display: flex;
  font-size: 30rpx;
  align-items: center;
}

.right {
  color: #999; /* 根据实际需求调整最近消息的样式 */
  font-size: 25rpx; /* 设置时间的字体大小，根据实际需求调整 */
}

.lmsg {
  margin-top: 8rpx;
  color: #999; /* 根据实际需求调整最近消息的样式 */
  font-size: 25rpx; /* 设置时间的字体大小，根据实际需求调整 */
}



.chat-item {
  border-bottom: 1rpx solid #ddd; /* 添加边框样式，可以根据实际需求调整颜色和样式 */
  padding: 20rpx; /* 可以根据实际需求调整边框周围的间距 */
  width: 100%;
}

.red-dot {
  width: 10px;
  height: 10px;
  background-color: red;
  border-radius: 50%;
  margin-left: 5px; /* 为了让红点与名字之间有一些间隔，你可以调整这个值 */
  display: inline-block;
}

.head{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  justify-content: center;
}

.icon {
  margin-left: 15px;
  float: left;
  width: 150rpx;
  height: 100rpx;
  border-radius: 30%;
  margin-right: 10px;
}