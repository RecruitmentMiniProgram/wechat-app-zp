}
.job_list_wrap .job_list_raw {
  width: 95%;
  display: flex;
}
.job_list_wrap .job_list_raw navigator {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.job_list_wrap .job_list_raw navigator .content_top {
  flex: 1;
  margin-top: 0rpx;
  display: flex;
  justify-content: space-between;
}

