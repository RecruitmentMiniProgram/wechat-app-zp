<!-- index.wxml -->
<import src="../../templates/jobList.wxml" />
<SearchInput></SearchInput>
<!-- 轮播图 -->
<view class="swiper-container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item.swiperImgSrc}}" mode="widthFix" class="img" bindtap="swipclick" />
      </swiper-item>
    </block>
  </swiper>
</view>
<!-- 导航 -->
<view class="nav-up">
  <view class="nav-one-up nav-all" bindtap='bindViewToday'>
    <view class="nav-one-up-img nav-all-img">
      <image src="../../images/zwgw.png" />
    </view>
    <view class="nav-text">全部职位</view>
  </view>
  <view class="nav-three-up nav-all" bindtap='bindViewCategory'>
    <view class="nav-three-up-img nav-all-img">
      <image src="../../images/xz.png" />
    </view>
    <view class="nav-text">企业分类</view>
  </view>
  <view class="nav-tow-up nav-all" bindtap='bindViewTodayGxz'>
    <view class="nav-tow-up-img nav-all-img">
      <image src="../../images/bt.png" />
    </view>
    <view class="nav-text">急聘</view>
  </view>
  <view class="nav-four-up nav-all" bindtap='bindViewPartTime'>
    <view class="nav-four-up-img nav-all-img">
      <image src="../../images/sgry.png" />
    </view>
    <view class="nav-text">兼职</view>
  </view>
  <view class="nav-all">
    <button class="conbtn" open-type="contact">
      <view class="nav-one-down-img nav-all-img">
        <image src="../../images/wx.png" />
      </view>
    </button>
    <view class="nav-text">微信咨询</view>
  </view>
</view>
<view>
  <view class="group-container">
    <image src="../../images/join_group.png" mode="widthFix" class="image"></image>
  </view>
</view>
<view class="space-line"></view>
<view>
  <view class="tab-item">急聘职位</view>
  <view>
    <template is="jobList" data="{{jobList:jobList}}" />
  </view>
</view>