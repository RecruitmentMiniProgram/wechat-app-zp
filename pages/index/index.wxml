<!-- index.wxml -->
<import src="../../template/jobList.wxml" />
<!-- <wxs src="../../utils/time.wxs" module="time" /> -->
<SearchInput></SearchInput>
<!-- 轮播图 -->
<view class="swiper-container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item.swiperImgSrc}}" mode="aspectFit" class="img" bindtap="swipclick" />
      </swiper-item>
    </block>
  </swiper>
</view>
<!-- 导航 -->
<view class="nav-up">
  <view class="nav-one-up nav-all" bindtap='bindViewToday'>
    <view class="nav-one-up-img nav-all-img">
      <image src="../../images/zwgw.png" />
    </view>
    <view class="nav-text">全部职位</view>
  </view>
  <view class="nav-tow-up nav-all" bindtap='bindViewTodayGxz'>
    <view class="nav-tow-up-img nav-all-img">
      <image src="../../images/bt.png" />
    </view>
    <view class="nav-text">高薪资</view>
  </view>
  <view class="nav-three-up nav-all" bindtap='bindViewTodayLsg'>
    <view class="nav-three-up-img nav-all-img">
      <image src="../../images/xz.png" />
    </view>
    <view class="nav-text">临时工</view>
  </view>
  <view class="nav-four-up nav-all" bindtap='bindViewTodayTj'>
    <view class="nav-four-up-img nav-all-img">
      <image src="../../images/sgry.png" />
    </view>
    <view class="nav-text">推荐</view>
  </view>
</view>
<view style="height: 50rpx;color: gray;"></view>
<view>
  <view class="tab-item">急聘职位</view>
  <view style="height: 10rpx;"></view>
  <view>
    <template is="jobList" data="{{jobList:jobList}}" />
  </view>
</view>