.swiper-container {
  background-color: #fff;
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 15rpx;

}

.swiper-container .swiper {
  width: 95%;
  height: 300rpx;
  border-radius: 20rpx;
  transform: translateY(0);
  overflow: hidden;
}

.img{
  width: 100%; 
  height: 100%; 
}

