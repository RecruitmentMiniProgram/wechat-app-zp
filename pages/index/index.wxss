/* 加入群聊 */

.group {
  width: 100%;
  /* position: relative; */
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #4e4d4d;
}

.group-container {
  background-color: #fff;
  display: flex;
  position: relative;
  justify-content: center;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  /* height: 10rpx; */
  
  /* padding: 10%; */

}

.group-container .image {
  width: 95%;
  height: 150rpx;
  border-radius: 20rpx;
  transform: translateY(0);

  overflow: hidden;
}

.text-container {
  position: absolute;
  top: 50%;
  left: 30%;
  transform: translate(-50%, -50%);
  text-align: left; 
}


.text-content-up,.text-content-down{
  color: #000;
  font-size: 25rpx;
  text-align: left; 
  font-weight: bold;
}



.loading {
  width: 100%;
  height: 30px;
  text-align: center;
  line-height: 30px;
  color: #888;
  font-size: 15px;
  border-top: 1px #F7F7F7 solid;
  border-bottom: 1px #F7F7F7 solid;
}

/*滚动tab*/
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  margin-left: auto;
  margin-right: auto;
  margin-top: 0;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  
  padding-top: 30rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  text-align: left;
  /* font-weight: bold; */
  font-size: large;
}

.tab-item.active {
  position: relative;
  background: #fff
}

.tab-content {
  margin-top: 3rpx;
  height: 1000rpx;
}

