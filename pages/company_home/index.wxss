page {
  background-color: #fff;
  font-family: MicroSoft yahei;
}

.com_wrap {
  padding-bottom: 150rpx;
  padding-left: 10rpx;
  margin: 17rpx 0rpx;
 /* padding: 20rpx 10rpx;*/
  border-top: 5rpx solid #f3efef;
}

.btn-hover {
  background-color: #007acc;
  /* 触摸时的背景色，可以根据需要调整 */
}

.com_wrap .com {
  flex: 1;
  display: flex;
  justify-content: space-around;
}

.com_wrap .com .content_btm_lft {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.com_wrap .com .content_btm_lft image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-right: 40rpx;
}

.com_wrap .com .content_btm_rgt {
  flex: 7;
  display: flex;
  flex-direction: column;
}

.com_wrap .com .content_btm_rgt .cbr_top {
  flex: 1;
  font-size: 44rpx;
  font-weight: 540;
  color: #161616;
}

.com_wrap .com .content_btm_rgt .cbr_btm {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.com_wrap .com .content_btm_rgt .cbr_btm .cbr_btm_lft {
  display: flex;
  justify-content: start;
  font-size: 29rpx;
  font-weight: 400;
  color: #161616;
  padding-top: 10rpx;
}

.com_wrap .com .content_btm_rgt .cbr_btm .cbr_btm_lft text {
  display: inline-block;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  padding: 20rpx;
}

.content {
  padding: 30rpx;
  font-size: 30rpx;
}

.btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  padding: 10rpx;
}

.btm_tool .tool_item {
  flex: 1px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}

.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.btm_tool .btn_buy {
  flex: 4;
  background-color: var(--themeColor);
  border: 1rpx var(--themeColor) solid;
  border-radius: 20rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.btm_tool #isSubmit {
  color: var(--themeColor);
  background-color: #fff;
}

.btm_tool {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  background-color: #fff;
}


.bottom-bar {
  /* border-top: 1px solid #ddd;  */
  /* position: relative; */
  justify-content: space-between;
  width: 100%;
  align-items: center;
  display: flex;
}

.chat-icon::after{
  border: none;
}
.chat-icon {
  /* margin-top: 10rpx; */
  width: 50px;
  height: 50px;
  margin-left: 20rpx;
  background-color: #fff;
}

.submit-resume-right {
  flex: 1;
  height: 50px;
  margin-left: 10px;

  margin-top: 10rpx;
  margin-right: 20rpx;
  line-height: 40px;
  width: 80%;
  height: 40px;

  padding: 0;
  font-size: 13px;
  border-radius: 70;
  background-color: #4a90e2;
  color: #ffff;
}


.submit-resume {
  margin-top: 10rpx;
  margin-right: auto;
  line-height: 40px;
  /* 设置行高等于按钮的高度，实现垂直居中 */
  width: 80%;
  /* 右边4/5的宽度 */
  height: 40px;

  padding: 0;
  font-size: 13px;
  border-radius: 70;
  background-color: #4a90e2;
  color: #ffff;
}