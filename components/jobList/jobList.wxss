  .btn_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* height: 30vh; */
    margin-top: 30rpx;
  }
  .btn{
    position: fixed;
    bottom: 20rpx;
    margin: 10px auto;
    /* padding: 10px; */
    width: 80%; /* 设置按钮宽度为页面宽度的80% */
    background-color:#4a90e2; /* 用户注册按钮蓝色 */
    color: #fff;
    border: none;
    border-radius: 0px;
    cursor: pointer;
    opacity: 1; /* 设置透明度为 1，即不透明 */
    padding: 0;
    font-size: 13px;  
    background-color:#4a90e2; 
  }