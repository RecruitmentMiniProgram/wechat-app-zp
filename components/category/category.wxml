<!-- pages/components/bottomdialog/bottomdialog.wxml -->
<view wx:if='{{flag}}'>
    <view class='wrap {{wrapAnimate}}' style='background:rgba(0,0,0,{{bgOpacity}});'></view>
    <view catchtap='hideFrame' class='frame-wrapper {{frameAnimate}}'>
        <view catchtap='catchNone' class='frame cates'>
            <view class='title-wrapper flex'>
                <text class="more_title"></text>
                <view catchtap='close' class="close"></view>
            </view>
            <!-- <view class="cates"> -->
            <view class="cates_container">
                <scroll-view scroll-y class="left_menu" bind:scroll="scrollTop" bindscrolltoupper="bindscrolltoupper">
                    <view class="{{top>1?'topnav':''}}" class="menu_item {{index===currentIndex?'active':''}}" wx:for="{{leftMenuList}}" wx:key="id" bindtap="handleItemTap" data-index="{{index}}">
                        {{item}}
                    </view>
                </scroll-view>
                <scroll-view scroll-top="{{scrollTop}}" scroll-y="{{true}}" class="right_contents">
                    <view class="goods_group" wx:for="{{rightContent}}" wx:key="id" wx:for-index="index1" wx:for-item="item1">
                        <view class="goods_list" bindtap="onChooseClick" data-name="{{item1}}">
                            {{item1}}
                        </view>
                    </view>
                </scroll-view>
            </view>
            <!-- </view> -->
            <view class="btm_tool">
                <view class="bottom-bar">
                    <button bindtap="moreReset" hover-class="btn-hover-re" class="reset">重置</button>
                    <button hover-class="btn-hover-con" bindtap="moreConfirm" class="confirm">
                        确定
                    </button>
                </view>
            </view>
        </view>
    </view>
</view>